{
    "manifest_version": 3,
    "version": "3.0.1",
    "name": "Pants- Remove YouTube Shorts",
    "description": "Makes YouTube Shorts less addictive",
     "icons":  {"16": "icon16.png",
				"32": "icon32.png",
				"48": "icon48.png",
				"128": "icon128.png"},
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["script.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "storage"
    ],
    "action":{
        "default_icon": "icon128.png",
        "default_title": "Pants",
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
    	"gecko":{
				  "id": "{fd9326b4-ee4f-4133-8854-21b6125b1d1c}",
				  "strict_min_version": "109.0",
				  "data_collection_permissions": {"required": ["none"]}
				}
  	}
}

