{
    "manifest_version": 2,
    "version": "1.1.1",
    "name": "Pants",
    "description": "Makes Youtube Shorts less addictive",
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["script.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "webNavigation",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action":{
        "default_icon": "icon.png",
        "default_title": "Pants",
        "default_popup": "popup.html"
    }
}

