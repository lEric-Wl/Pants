{
    "manifest_version": 2,
    "version": "2.0.0",
    "name": "Pants",
    "description": "Makes Youtube Shorts less addictive",
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/*"],
            "js": ["script.js"],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "webNavigation",
        "storage"
    ],
    "browser_action":{
        "default_icon": "icon.png",
        "default_title": "Pants",
        "default_popup": "popup.html"
    }
}

